%h2 Details about #{@movie.title}
%ul#details
    %li 
        Rating: 
        = @movie.rating
    %li
        Released on:
        = @movie.release_date.strftime("%B %d, %Y")
%h3 Description:
%p#description= @movie.description
= link_to "Back to all movies", movies_path
%br
%br
= link_to "Edit #{@movie.title}", edit_movie_path(@movie)
%br
%br
= link_to "Delete #{@movie.title}", movie_path(@movie), :method => :delete